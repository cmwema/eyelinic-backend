style. 
    body {
        font-family: 'Lato', sans-serif;
        font-weight: 300;
        font-size: 1.2rem;
        line-height: 1.5;
        color: #212529;
    }
    
    h1, h2, h3, h4, h5, h6 {
        font-weight: 700;
    }
    
    h1 {
        font-size: 2.5rem;
    }
    
    h2 {
        font-size: 2rem;
    }
    
    h3 {
        font-size: 1.75rem;
    }
    
    h4 {
        font-size: 1.5rem;
    }
    
    h5 {
        font-size: 1.25rem;
    }
    
    h6 {
        font-size: 1rem;
    }
    
    p {
        margin-bottom: 1rem;
    }
    
    a {
        color: #007bff;
        text-decoration: none;
        background-color: transparent;
    }
    
    a:hover {
        color: #0056b3;
        text-decoration: underline;
    }
    
    a:not([href]):not([class]) {
        color: inherit;
        text-decoration: none;
    }
    
    a:not([href]):not([class]):hover {
        color: inherit;
        text-decoration: none;
    }
    
    img {
        vertical-align: middle;
        border-style: none;
    }
    
    .btn--custom {
        display: inline-block;
        font-weight: 400;
        color: #212529;
        text-align: center;
        vertical-align: middle;
        user-select: none;
        background-color: transparent;
        border: 1px solid transparent;
        padding: .375rem .75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: .25rem;
        transition: color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out;
    }
    
    .btn--custom:hover {
        color: #212529;
        text-decoration: none;
    }
    
    .btn--custom:focus, .btn.focus {
        outline: 0;
        box-shadow: 0 0 0 .2rem rgba(0, 123, 255, .25);
    }
    

extends base
block content
  .container-sm-fluid.mx-4.mb-5
      .card.card-register.mx-md-5.mt-5.d-flex.justify-content-center
        .card-header.bg-secondary.text-white.text-center
          | Register an Account
        .card-body.content-center
          form
            .form-group
              .form-row
                .col-md-6
                  label(for='exampleInputName') Full name
                  input#exampleInputName.form-control(type='text', aria-describedby='nameHelp', placeholder='Enter full name')
                
            .form-group
              label(for='exampleInputEmail1') Email address
              input#exampleInputEmail1.form-control(type='email', aria-describedby='emailHelp', placeholder='Enter email')
            .form-group
              .form-row
                .col-md-6
                  label(for='exampleInputPassword1') Password
                  input#exampleInputPassword1.form-control(type='password', placeholder='Password')
                .col-md-6
                  label(for='exampleConfirmPassword') Confirm password
                  input#exampleConfirmPassword.form-control(type='password', placeholder='Confirm password')
            a.btn.btn-primary.btn-block.mt-3(href='login.html') Register
          .text-center
            a.d-block.small.mt-3.link-primary(href='/sign-in' style="text-decoration:none") Login Page
            a.d-block.small.link-primary(href='/forgot-password' style="text-decoration:none") Forgot Password?
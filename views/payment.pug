extends base

block content

  .container.p-0.mt-4
    .card.px-4
      p.h8.py-3 Payment Details
      .row.gx-3
        .col-12
          .d-flex.flex-column
            p.text.mb-1 Person Name
            input.form-control.mb-3(type='text' placeholder='Name' value='Barry Allen')
        .col-12
          .d-flex.flex-column
            p.text.mb-1 Card Number
            input.form-control.mb-3(type='text' placeholder='1234 5678 435678')
        .col-6
          .d-flex.flex-column
            p.text.mb-1 Expiry
            input.form-control.mb-3(type='text' placeholder='MM/YYYY')
        .col-6
          .d-flex.flex-column
            p.text.mb-1 CVV/CVC
            input.form-control.mb-3.pt-2(type='password' placeholder='***')
        .col-12
          .btn.btn-primary.mb-3
            span.ps-3 Pay $243
            span.fas.fa-arrow-right

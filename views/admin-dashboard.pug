extends base

block content 
    .container-fluid.mb-5
        h3.text-center.text-primary.m-2 Admin Dashboard
        hr.text-secondary(style="font-weight: 900")
        .row.m-4
            table(style="width:100%; padding: 10px")
                tr 
                    th.text-center Users
                    th.text-center Services
                    th.text-center Bookings

                tr
                    td.text-center.text-primary(style="font-weight: 700")= usersList.length
                    td.text-center.text-primary(style="font-weight: 700")= services.length
                    td.text-center.text-primary(style="font-weight: 700")= bookings.length

        hr.text-dark
        .row 
            .col-md-12.border.border-black 
                .container-fluid(style="width=100%")
                    .row.mb-5#users
                        table(style="width=100%")
                            tr
                                th(colspan="8").text-center.bg-secondary.p-2 Users
                            tr(style="border-bottom: 3px solid grey;")
                                th photo
                                th username
                                th email
                                th age
                                th created At
                                th role
                                th edit 
                                th delete   
                            each user in usersList
                                tr
                                    td
                                        img(src=`/img/users/${user.photo}` alt=`Photo of user` style='width: 25px; height: 25px; border-radius: 50%;')
                                    td= user.username
                                    td= user.email
                                    td= user.age
                                    td= user.createdAt.toLocaleDateString()
                                    td= user.role
                                    td
                                        a(href="#" style="height: 25px; font-size: 15px; padding:3px; text-decoration: none").btn.btn-success.px-3 edit
                                    td 
                                        a(href="#" style="height: 25px; font-size: 15px; padding:3px; text-decoration: none").btn.btn-danger.px-3 del
                    .btn.btn-outline-success.mb-2 new User
        hr
        //- services
        .row 
            .col-md-5.border.border-black 
                .container-fluid(style="width=100%")                
                    .row.mb-5#services
                        table(style="width=100%")
                            tr
                                th(colspan="8").text-center.bg-secondary.p-2 Services
                            tr(style="border-bottom: 3px solid grey;")
                                th Name
                                th Price(Ksh)
                        
                                th Reviews
                        
                                th Rating
                                th edit 
                                th delete   
                            each service in services
                                tr
                                    td= service.name
                                        
                                    td= service.price
                                
                                    td= service.ratingQuantity
                                
                                    td= service.ratingAverage
                                    td
                                        a(href="#" style="height: 25px; font-size: 15px; padding:3px; text-decoration: none").btn.btn-success.px-3 edit
                                    td 
                                        a(href="#" style="height: 25px; font-size: 15px; padding:3px; text-decoration: none").btn.btn-danger.px-3 del            
                    .btn.btn-outline-success.mb-2 new service
              
            .col-md-7.border.border-black
                .container-fluid(style="width=100%")                
                    .row.mb-5#bookings
                        table(style="width=100%")
                            tr
                                th(colspan="8").text-center.bg-secondary.p-2 Bookings
                            tr(style="border-bottom: 3px solid grey;")
                                th User
                                th Booked At
                        
                                th Service
                        
                                th Price(Ksh)
                                th edit 
                                th delete   
                            each booking in bookings
                                tr
                                    td= booking.user.username
                                        
                                    td= booking.createdAt.toLocaleDateString()
                                
                                    td= booking.service.name
                                
                                    td= booking.price
                                    td
                                        a(href="#" style="height: 25px; font-size: 15px; padding:3px; text-decoration: none").btn.btn-success.px-3 edit
                                    td 
                                        a(href="#" style="height: 25px; font-size: 15px; padding:3px; text-decoration: none").btn.btn-danger.px-3 del            

                